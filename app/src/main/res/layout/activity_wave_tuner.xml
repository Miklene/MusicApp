<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewPlayWaveTuner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_round_play_arrow_24"
        android:transitionName="@string/transition" />

    <Button
        android:id="@+id/buttonIncreaseFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageViewPlayWaveTuner" />

    <Button
        android:id="@+id/buttonDecreaseFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imageViewPlayWaveTuner" />

    <TextView
        android:id="@+id/textViewStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDecreaseFrequency"
        android:layout_alignParentStart="true"
        android:text="@string/step"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextStep"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStep"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="numberDecimal" />
</RelativeLayout>