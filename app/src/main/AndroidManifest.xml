<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/note9"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity">
        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.wave_dialog.WaveDialogActivity"
            android:label="@string/waveParameters"
            android:noHistory="true"

            android:theme="@style/Theme.WaveDialogActivity">
            <intent-filter>
                <action android:name="android.intent.action.FRAGMENT" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".common.GraphDialogActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.WaveTunerActivity" />

        <activity
            android:name=".activities.wave_tuner.WaveTunerActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.WaveTunerActivity" />

        <activity
            android:name=".activities.settings.SettingsActivity"
            android:parentActivityName=".activities.main.MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.WaveTunerActivity">
        /</activity>>


    </application>


</manifest>